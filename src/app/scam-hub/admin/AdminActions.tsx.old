'use client';

import { useState } from 'react';

type Props = {
  postId: string;           // you already pass this
  wallet?: string;          // BSC wallet to reward (optional if your post has it)
  adminKey: string;         // the key from the URL (?key=...)
};

export default function AdminActions({ postId, wallet = '', adminKey }: Props) {
  const [busy, setBusy] = useState(false);
  const [msg, setMsg] = useState<string | null>(null);

  async function sendReward() {
    try {
      setBusy(true);
      setMsg(null);

      if (!wallet) {
        setMsg('No wallet on this post.');
        return;
      }

      const res = await fetch('/api/scam-hub/payout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ wallet, key: adminKey }),
      });

      const data = await res.json();
      if (!res.ok || !data.ok) {
        setMsg(`Reward failed: ${data.error ?? res.statusText}`);
        return;
      }

      setMsg(`Reward sent! tx: ${data.txHash.slice(0,10)}...`);
    } catch (err: any) {
      setMsg(`Error: ${err?.message ?? 'unknown'}`);
    } finally {
      setBusy(false);
    }
  }

  // you probably already have Approve/Reject buttons.
  // just add this new Send Reward button.
  return (
    <div style={{ display: 'flex', gap: 8, alignItems: 'center' }}>
      {/* your existing Approve/Reject buttons go here */}

      <button
        onClick={sendReward}
        disabled={busy}
        style={{
          background: '#0ea5e9',
          color: 'white',
          border: 0,
          borderRadius: 6,
          padding: '6px 10px',
          cursor: busy ? 'not-allowed' : 'pointer',
        }}
        title={wallet ? `Send reward to ${wallet}` : 'No wallet'}
      >
        {busy ? 'Sendingâ€¦' : 'Send reward'}
      </button>

      {msg && <span style={{ fontSize: 12, color: '#888' }}>{msg}</span>}
    </div>
  );
}
